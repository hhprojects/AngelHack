@model AppUser
@{
    Layout = "_Layout";
}

<style>
    .profile{
        margin: 10%;
        margin-top:5%
      }
      .personal-info{
        display: flex;
        flex-direction: column;

      }

      .personal-info ol{
        list-style-type: none;
      }
      .personal-info-content{
        margin:20px;

        border: 1px solid black;
        display: flex;
        border-radius:75px;
        flex-direction:row;
        align-items: center;
      }
      .personal-info-content img{
        width: 100px;
        height: 100px;
      }
      .personal-info-content li{
        margin: 40px;
      }
      .personal-stats{
        text-align: right;
        display: flex;
      }
      .personal-stats li{
list-style-type:none;
margin: 40px;
      }
      .personal-header{
        margin: 20px;
      }

      .personal-history{
            margin: 20px;
            border: 1px solid black;
            display: flex;
            border-radius: 75px;
            flex-direction: row;
            align-items: center;
            padding: 30px;
      }

      table{
      }

</style>

<section class="profile">
      <div class="personal-header">
        <h2>Personal Info</h2>
      </div>

   <div class="personal-info">

      <div class="personal-info-content">
          <img>
          <ol>
            <li>Name: @Model.DisplayName</li>
            <li>Email: @Model.Email</li>
            <li>Organization: @Model.Organisation</li>

          </ol>
      </div>
    </div>
<div class="personal-stats">
    <div>
      <li><h2>Community Hours</h2></li>
            <li><h2>@Model.TotalHrs</h2></li>
    </div>
    <hr>
    <div>
      <li><h2>Rewards Points</h2></li>
            <li><h2>@Model.TotalPts</h2></li>
    </div>
</div>
<div class="personal-header"> 
  <h2>History</h2>
</div>

<div class="personal-history">
    <table class="table">
        <tr>
                <th scope="col">Title</th>
                <th scope="col">Event Date</th>
                <th scope="col">Organised By</th>
                <th scope="col">Points Earned</th>
                <th scope="col">Hours Earned</th>
        </tr>
         @foreach (var item in Model.UserEvent)
         {   
          <tr>
              <th scope="row">@item.Uevent.Title</th>
              <td>@item.Uevent.EventDate</td>
              <td>@item.Uevent.Organiser</td>
              <td>@item.Uevent.Points</td>
              <td>@item.Uevent.Hrs</td>
          </tr>  
         }
        </table>
</div>
</section>