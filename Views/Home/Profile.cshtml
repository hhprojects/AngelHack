@model AppUser
@{
    Layout = "_Layout";
}

<style>
      
    
    #profile{
        padding-top: 100px;
    }

    #username{
        font-size:30px;
        font-weight: bold;
        margin-bottom:20px;
    }

    #details{
        font-size:20px;
        margin-bottom: 40px;
    }
    
    #organisation-details{
        margin-right: 15px;
    }
    
    .community-details{
        font-weight:bold;
        font-size:30px;
        padding: 20px 40px;
    }

    #hours{
        border-right: 1px solid black;
    }
    
    #pts-img{
        margin-left: 40px;
    }


    #history, #awards{
        margin-top: 40px;
        margin-bottom:20px;
    }

    #history-title, #awards-title{
        font-weight: bold;
        font-size: 25px;
    }

    .personal-history{
        border: 1px solid black;
        display: flex;
        border-radius: 20px;
        flex-direction: row;
        align-items: center;
        padding: 10px;
    }

    /* Popup container - can be anything you want */
    .popup {
      position: relative;
      display: inline-block;
      cursor: pointer;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
    }

    /* The actual popup */
    .popup .popuptext {
      visibility: hidden;
      width: 160px;
      background-color: #555;
      color: #fff;
      text-align: center;
      border-radius: 6px;
      padding: 8px 0;
      position: absolute;
      z-index: 1;
      bottom: 125%;
      left: 50%;
      margin-left: -80px;
    }

    /* Popup arrow */
    .popup .popuptext::after {
      content: "";
      position: absolute;
      top: 100%;
      left: 50%;
      margin-left: -5px;
      border-width: 5px;
      border-style: solid;
      border-color: #555 transparent transparent transparent;
    }

    /* Toggle this class - hide and show the popup */
    .popup .show {
      visibility: visible;
      -webkit-animation: fadeIn 1s;
      animation: fadeIn 1s;
    }

</style>

<div class="container" id="profile">
    <div>
        <img src="~/images/second.png" />
    </div>
    <div id="username">
        @Model.UserName
    </div>
    <div id="details">
        <i class="fa fa-map-marker" aria-hidden="true"></i>
        <span id="organisation-details">@Model.Organisation</span>
        <i class="fa fa-envelope-o" aria-hidden="true"></i>
        <span>@Model.Email</span>
    </div>
    <div>
        <img src="~/images/hours.png" />
        <span class="community-details" id="hours">@Model.TotalHrs Hours</span>
        <img id="pts-img" src="~/images/points.png" />
        <span class="community-details">@Model.TotalPts Points</span>
    </div>
</div>

<div class="container">
    <div id="awards">
        <p id="awards-title">Awards & Achievement</p>
        
    </div>
    <div class="personal-history">
        <div class="popup" onclick="myFunction()">
            <img src="~/images/nyaagold.jpg" width="200px"/>
            <span class="popuptext" id="myPopup">NYAA Gold Award</span>
        </div>

        <img src="~/images/goldaward.png" width="200px" />
    </div>
</div>


<div class="container">
    <div id="history">
        <p id="history-title">History Table</p>
    </div>
    <div class="personal-history">
        <table class="table">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Event Date</th>
                <th scope="col">Organised By</th>
                <th scope="col">Points Earned</th>
                <th scope="col">Hours Earned</th>
            </tr>
            @foreach (var item in Model.UserEvent)
            {
                <tr>
                    <th scope="row">@item.Uevent.Title</th>
                    <td>@item.Uevent.EventDate</td>
                    <td>@item.Uevent.Organiser</td>
                    <td>@item.Uevent.Points</td>
                    <td>@item.Uevent.Hrs</td>
                </tr>
            }
        </table>
    </div>
</div>

<script>
    // When the user clicks on div, open the popup
    function myFunction() {
        var popup = document.getElementById("myPopup");
        popup.classList.toggle("show");
    }
</script>